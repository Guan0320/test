<Window x:Class="WPFUIUX.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="變更追蹤示範 - TrackingViewModel Demo" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0" 
                   Text="TrackingViewModel&lt;T&gt; 變更追蹤示範" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- 控制按鈕 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="新增客戶" 
                    Command="{Binding AddCustomerCommand}" 
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    FontSize="14"/>
            <Button Content="儲存變更" 
                    Command="{Binding SaveChangesCommand}" 
                    Padding="15,8" 
                    FontSize="14"
                    Background="#4CAF50"
                    Foreground="White"/>
        </StackPanel>

        <!-- 資料表格 -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Customers}" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F5F5F5"
                  RowHeight="35">

            <!-- 修改過的資料列樣式 -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDirty}" Value="True">
                            <Setter Property="Background" Value="#FFE8B3"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <!-- 使用索引器語法綁定，會呼叫 TrackingViewModel 的 this[propertyName] -->
                <DataGridTextColumn Header="姓名" 
                                    Binding="{Binding [Name], UpdateSourceTrigger=PropertyChanged}" 
                                    Width="*" 
                                    MinWidth="120"/>
                <DataGridTextColumn Header="年齡" 
                                    Binding="{Binding [Age], UpdateSourceTrigger=PropertyChanged}" 
                                    Width="80"/>
                <DataGridTextColumn Header="Email" 
                                    Binding="{Binding [Email], UpdateSourceTrigger=PropertyChanged}" 
                                    Width="200"/>
                <DataGridTextColumn Header="地址" 
                                    Binding="{Binding [Address], UpdateSourceTrigger=PropertyChanged}" 
                                    Width="180"/>
                <DataGridTextColumn Header="城市" 
                                    Binding="{Binding [City], UpdateSourceTrigger=PropertyChanged}" 
                                    Width="100"/>
                <DataGridCheckBoxColumn Header="已修改?" 
                                        Binding="{Binding IsDirty, Mode=OneWay}" 
                                        IsReadOnly="True" 
                                        Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 說明文字 -->
        <Border Grid.Row="3" 
                Background="#E3F2FD" 
                Padding="15" 
                Margin="0,15,0,0"
                BorderBrush="#2196F3"
                BorderThickness="1"
                CornerRadius="4">
            <StackPanel>
                <TextBlock FontWeight="Bold" Margin="0,0,0,5">
                    💡 使用說明：
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    1. 直接編輯表格中的資料，系統會自動追蹤變更（修改過的資料列會以橘色背景顯示）
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,3,0,0">
                    2. 如果將值改回原始值，系統會自動標記為未修改狀態
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,3,0,0">
                    3. 點擊「儲存變更」只會儲存被修改的資料
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,3,0,0" FontStyle="Italic" Foreground="#666">
                    註：直接使用 TrackingViewModel&lt;Customer&gt;，無需額外的包裝類別
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
