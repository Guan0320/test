<Window x:Class="BlankApp1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 標題 -->
            <TextBlock Grid.Row="0" 
                   Text="Customer 觀察示範" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

            <!-- 控制按鈕 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                <Button Content="新增客戶" 
                    Command="{Binding AddCustomerCommand}" 
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    FontSize="14"/>
                <Button Content="儲存變更" 
                    Command="{Binding SaveChangesCommand}" 
                    Padding="15,8" 
                    FontSize="14"
                    Background="#4CAF50"
                    Foreground="White"/>
            </StackPanel>

            <!-- DataGrid 與 SelectedItem 詳細區 -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- DataGrid -->
                    <RowDefinition Height="150"/>
                    <!-- SelectedItem -->
                </Grid.RowDefinitions>

                <!-- 資料表格 -->
                <DataGrid x:Name="CustomerDataGrid"
                      ItemsSource="{Binding Customers}" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      RowHeight="35">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                    <Setter Property="Background" Value="#FFE8B3"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="MarkAsClean">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding MarkAsCleanCommand}"></Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="ReloadFromModel">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding ReloadFromModelCommand}"></Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Test">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding TestCommand}"></Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="姓名" 
                                        Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="*" 
                                        MinWidth="120"/>
                        <DataGridTextColumn Header="年齡" 
                                        Binding="{Binding Age, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="80"/>
                        <DataGridTextColumn Header="Email" 
                                        Binding="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="200"/>
                        <DataGridTextColumn Header="地址" 
                                        Binding="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="180"/>
                        <DataGridTextColumn Header="城市" 
                                        Binding="{Binding City, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 選取資料觀察區 -->
                <Border Grid.Row="1" 
                    Background="#FFFDE7" 
                    Padding="10" 
                    Margin="0,10,0,0"
                    BorderBrush="#FFC107"
                    BorderThickness="1"
                    CornerRadius="4">
                    <StackPanel>
                        <TextBlock FontWeight="Bold" Text="選取的客戶資訊：" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="姓名：" Width="60"/>
                            <TextBlock Text="{Binding SelectedCustomer.Name}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="年齡：" Width="60"/>
                            <TextBlock Text="{Binding SelectedCustomer.Age}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="Email：" Width="60"/>
                            <TextBlock Text="{Binding SelectedCustomer.Email}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="地址：" Width="60"/>
                            <TextBlock Text="{Binding SelectedCustomer.Address}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="城市：" Width="60"/>
                            <TextBlock Text="{Binding SelectedCustomer.City}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 說明文字 -->
            <Border Grid.Row="3" 
                Background="#E3F2FD" 
                Padding="15" 
                Margin="0,15,0,0"
                BorderBrush="#2196F3"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Margin="0,0,0,5">
                    💡 使用說明：
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                    1. 直接編輯表格中的資料，變更會即時更新 SelectedCustomer
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,3,0,0">
                    2. 選取資料會在下方區域即時顯示
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
